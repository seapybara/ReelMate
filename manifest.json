{
    "manifest_version": 3,
    "name": "ReelMate",
    "version": "2.0",
    "description": "Your intelligent movie companion - get personalized recommendations!",
    
    "permissions": [
        "contextMenus",
        "storage",
        "scripting",
        "activeTab"
    ],
    
    "host_permissions": [
        "https://api.themoviedb.org/*"
    ],
    
    "background": {
        "service_worker": "background.js"
    },
    
    "action": {
        "default_popup": "popup.html",
        "default_title": "ReelMate - Movie Recommendations"
    },
    
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
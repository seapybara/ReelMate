{
    "manifest_version": 3,
    "name": "ReelMate",
    "version": "2.0",
    "description": "Your intelligent movie companion - get personalized recommendations with enhanced filtering and smart movie detection!",
    
    "permissions": [
        "contextMenus",
        "storage",
        "scripting",
        "tabs",
        "activeTab"
    ],
    
    "host_permissions": [
        "https://api.themoviedb.org/*",
        "https://*.imdb.com/*",
        "https://*.themoviedb.org/*",
        "https://*.rottentomatoes.com/*",
        "https://*.letterboxd.com/*"
    ],
    
    "background": {
        "service_worker": "background.js"
    },
    
    "action": {
        "default_popup": "popup.html",
        "default_title": "ReelMate - Movie Recommendations"
    },
    
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}